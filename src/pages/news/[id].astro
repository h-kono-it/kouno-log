---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const news = await getCollection('news');
  return news.map((item) => ({
    params: { id: item.id },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await render(item);
---

<Layout title={`${item.data.title} | kouno.log`} description={item.data.description} ogImage={`/og/news/${item.id}.png`}>
  <article>
    <header>
      <h1>{item.data.title}</h1>
      <time datetime={item.data.pubDate.toISOString()}>
        {item.data.pubDate.toLocaleDateString('ja-JP')}
      </time>
    </header>
    <div class="content">
      <Content />
    </div>
  </article>
  <p class="back-link">
    <a href="/news">&larr; News一覧に戻る</a>
  </p>
</Layout>

<style>
  article header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }

  article h1 {
    margin-bottom: 0.5rem;
  }

  time {
    color: #666;
    font-size: 0.875rem;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content :global(h1)::before {
    content: "# ";
    color: #999;
  }

  .content :global(h2)::before {
    content: "## ";
    color: #999;
  }

  .content :global(h3)::before {
    content: "### ";
    color: #999;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .content :global(code) {
    background: #f5f5f5;
    padding: 0.125rem 0.25rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(blockquote) {
    margin: 1rem 0;
    padding: 0.5rem 1rem;
    border-left: 4px solid #ccc;
    color: #666;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
  }

  .back-link {
    margin-top: 2rem;
  }
</style>
