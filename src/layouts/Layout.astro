---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'kouno.log - 技術メモとアウトプットの記録', ogImage } = Astro.props;
const siteUrl = Astro.url.origin;
const ogImageUrl = ogImage ? `${siteUrl}${ogImage}` : `${siteUrl}/ogp_kouno_log.png`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:type" content="article" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <title>{title}</title>
    <link rel="alternate" type="application/rss+xml" title="kouno.log RSS Feed" href="/feed.xml" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="site-title">kouno.log</a>
        <a href="/profile">Profile</a>
        <a href="/news">News</a>
        <a href="/memos">Memos</a>
        <a href="/external">External</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} kouno.log</p>
      <a href="/feed.xml" class="rss-link" title="RSS Feed">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <circle cx="6.18" cy="17.82" r="2.18"/>
          <path d="M4 4.44v2.83c7.03 0 12.73 5.7 12.73 12.73h2.83c0-8.59-6.97-15.56-15.56-15.56zm0 5.66v2.83c3.9 0 7.07 3.17 7.07 7.07h2.83c0-5.47-4.43-9.9-9.9-9.9z"/>
        </svg>
      </a>
    </footer>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }

  nav {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex-wrap: wrap;
  }

  nav a {
    color: #333;
    text-decoration: none;
    white-space: nowrap;
  }

  nav a.site-title {
    font-size: 1.5rem;
    font-weight: 700;
    font-family: 'SF Mono', 'Fira Code', 'Cascadia Code', Consolas, monospace;
    letter-spacing: -0.5px;
    margin-right: auto;
    width: 100%;
  }

  nav a.site-title:hover {
    text-decoration: none;
    opacity: 0.8;
  }

  nav a:hover {
    text-decoration: underline;
  }

  @media (min-width: 480px) {
    nav a.site-title {
      width: auto;
      margin-right: 1rem;
    }
  }

  main {
    min-height: 60vh;
  }

  footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    color: #666;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .rss-link {
    color: #666;
    transition: color 0.2s;
  }

  .rss-link:hover {
    color: #f26522;
  }

  h1 {
    margin-bottom: 1rem;
  }

  a {
    color: #0066cc;
  }
</style>
